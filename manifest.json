{
  "manifest_version": 3,
  "name": "security.txt Checker (local)",
  "version": "1.0.0",
  "description": "Checks whether the current domain publishes security.txt and lets you view it.",
  "action": {
    "default_title": "security.txt",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "icons": {
  }
}
