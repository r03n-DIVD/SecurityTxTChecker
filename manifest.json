{
  "manifest_version": 3,
  "name": "security.txt Inspector local",
  "version": "2.0.0",
  "description": "Security.txt inspector: probes, view, parse, validate, score, and custom endpoints.",
  "action": {
    "default_title": "security.txt",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  }
}
